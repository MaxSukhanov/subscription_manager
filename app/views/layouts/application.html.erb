<!DOCTYPE html>
<html>
  <head>
    <title>SubscriptionsManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
      <span>Hi, <%= current_user.email %></span>
      <%= button_to 'Sign out', destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= button_to 'Sign in', new_user_session_path %> or <%= button_to 'Sign up', new_user_registration_path %>
    <% end %>
    
    <%= yield %>
  </body>
</html>
