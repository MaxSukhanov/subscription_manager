<h1>Listing Products</h1>
  <%@products.each do |n| %>
    <h2> <%= link_to n.name, product_path(n.id) %> </h2>
    <p>
      <b><%= button_to "Delete", product_path(n.id), data: { confirm: "Do you really want to delete this product?"},  method: :delete %></b>
    </p>
    <hr>
  <%end%>
<p><%= button_to "Create new product", new_product_path %></p>