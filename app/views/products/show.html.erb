<h1> <%= @product.name %> </h1>

<p>
  <b>Product description:</b>
  <%= @product.description%>
</p>

<% if current_user && current_user.admin?%>
  <p>
    <%= form_with url: product_plans_path(@product)  do |p|%>
      <%= p.submit "Add plan" %>
    <% end %>
  </p>
<% end %>

<%= form_tag '/subscriptions', method: 'post', class: 'payment-form' %>
  <%= hidden_field_tag :product_id, params[:id]%>
   <div class="form-row">
    <label for="card-element">
      Fill out your payment data
    </label>
    <div id="card-element">
      <p><%= javascript_include_tag "subscriptions" %></p>
    </div>
    <div id="card-errors" role="alert"></div>
  </div>
<%= submit_tag 'Pay and Subscribe'%>

<p><%= button_to 'Back to product list', products_path, :method => :get %></p>
