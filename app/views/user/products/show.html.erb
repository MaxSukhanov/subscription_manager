<head>
  <title> Buy that! </title>
  <script src="https://js.stripe.com/v3/"></script>
</head>

<h1> <%= @product.name %> </h1>
<p> <%= @product.description%> </p>

<form action='/subscriptions' method='post' id="payment-form">

  <div class="form-row">
    <label for="card-element">
      Fill out your payment data
    </label>
    <div id="card-element">
      <p><%= javascript_include_tag "subscriptions" %></p>
    </div>
    <div id="card-errors" role="alert"></div>
  </div>
  <%= hidden_field_tag :product_id, params[:id]%>

  <button>Submit Payment</button>

<p><%= button_to 'Back to product list', products_path %></p>
